{
  "name": "jpazvd-github-io",
  "version": "1.0.0",
  "description": "João Pedro Azevedo's personal academic website",
  "repository": {
    "type": "git",
    "url": "git://github.com/jpazvd/jpazvd.github.io.git"
  },
  "keywords": [
    "jekyll",
    "academic",
    "personal-website",
    "github-pages"
  ],
  "author": "João Pedro Azevedo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpazvd/jpazvd.github.io/issues"
  },
  "homepage": "https://jpazvd.github.io/",
  "engines": {
    "node": ">= 0.10.0"
  },
  "devDependencies": {
    "npm-run-all": "^1.7.0",
    "onchange": "^2.2.0",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "uglify": "uglifyjs assets/js/vendor/jquery/jquery-1.12.4.min.js assets/js/plugins/jquery.fitvids.js assets/js/plugins/jquery.greedy-navigation.js assets/js/plugins/jquery.magnific-popup.js assets/js/plugins/jquery.smooth-scroll.min.js assets/js/plugins/stickyfill.min.js assets/js/_main.js -c -m -o assets/js/main.min.js",
    "watch:js": "onchange \"assets/js/**/*.js\" -e \"assets/js/main.min.js\" -- npm run build:js",
    "build:js": "npm run uglify"
  }
}
